@model EassyDental.Models.UsuarioCliente

@{
    ViewData["Title"] = "Cadastro do paciente";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form asp-action="Create" style="width: 23rem;">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Cadastro Paciente</h3>

                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Name" class="form-control" />
                            <label for="Name" class="form-label">Nome</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Telefone" class="form-control" />
                            <label for="Telefone" class="form-label">Telefone</label>
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Email" class="form-control" />
                            <label for="Email" class="form-label">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Senha" type="password" class="form-control" />
                            <label for="Senha" class="form-label">Senha</label>
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input type="password" class="form-control" />
                            <label for="ConfirmeSenha" class="form-label">Confirme a senha</label>
                            <span class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-lg btn-block" type="submit" style="background-color: #a8966f; color:white; border: none;">Cadastrar</button>
                        </div>

                        <p class="small mb-2 pb-lg-2"><a class="text-muted" href="@Url.Action("Create", "UsuarioDentistas")">Cadastro Dentista</a></p>
                        <p class="small mb-4 pb-lg-2"><a class="text-muted" href="@Url.Action("Login", "UsuarioClientes")">Login</a></p>
                    </form>
                </div>
            </div>

            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://www.vittalodontologia.com.br/wp-content/uploads/2018/08/mulher-sorrindo-consultorio-odontologico.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
