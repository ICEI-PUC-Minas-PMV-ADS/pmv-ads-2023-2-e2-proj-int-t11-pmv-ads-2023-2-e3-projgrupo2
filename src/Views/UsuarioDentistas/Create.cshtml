@model EassyDental.Models.UsuarioDentista

@{
    ViewData["Title"] = "Cadastro Dentista";
}

<section class="h-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form asp-action="Create" style="width: 23rem;">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Cadastro Dentista</h3>

                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Name" class="form-control" />
                            <label for="Name" class="form-label">Nome</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Telefone" class="form-control" />
                            <label for="Telefone" class="form-label">Telefone</label>
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Email" class="form-control" />
                            <label for="Email" class="form-label">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Senha" type="password" class="form-control" />
                            <label for="Senha" class="form-label">Senha</label>
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="CRO" class="form-control" />
                            <label for="CRO" class="form-label">CRO</label>
                            <span asp-validation-for="CRO" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <select asp-for="Especialidade" class="form-control" asp-items="Html.GetEnumSelectList<Especialidade>()"></select>
                            <label for="Especialidade" class="form-label">Especialidade</label>
                            <span asp-validation-for="Especialidade" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="NomeClinica" class="form-control" />
                            <label for="NomeClinica" class="form-label">Nome da clinica</label>
                            <span asp-validation-for="NomeClinica" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Endereco" class="form-control" />
                            <label for="Endereco" class="form-label">Endereço</label>
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="HorarioAbertura" class="form-control" />
                            <label for="HorarioAbertura" class="form-label">Horario de abertura</label>
                            <span asp-validation-for="HorarioAbertura" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="HorarioEncerramento" class="form-control" />
                            <label for="HorarioEncerramento" class="form-label">Horario de encerramento</label>
                            <span asp-validation-for="HorarioEncerramento" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4 form-floating">
                            <input asp-for="Descricao" class="form-control" />
                            <label for="Descricao" class="form-label">Descrição</label>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-lg btn-block" type="submit" style="background-color: #a8966f; color:white; border: none;">Cadastrar</button>
                        </div>

                        <p class="small mb-2 pb-lg-2"><a class="text-muted" href="@Url.Action("Create", "UsuarioClientes")">Cadastro Cliente</a></p>
                        <p class="small mb-4 pb-lg-2"><a class="text-muted" href="@Url.Action("Login", "UsuarioDentistas")">Login</a></p>
                    </form>
                </div>
            </div>

            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://img.freepik.com/fotos-gratis/close-up-de-um-feliz-macho-odontologo-olhando-camera_23-2147862093.jpg?w=740&t=st=1698751159~exp=1698751759~hmac=cddf792721b5ef46e87025fbfe30ca84349d8d4c435f70d283b5115efcfb154d"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
