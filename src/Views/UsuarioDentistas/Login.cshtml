@model EassyDental.Models.UsuarioDentista

@{
    ViewData["Title"] = "Login Dentista";
}

<link href="./css/Loginstyles.css" rel="stylesheet">
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form asp-action="Login" method="post" style="width: 23rem;">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login Dentista</h3>

                        <div class="form-outline mb-3 form-floating">
                            <input asp-for="Email" class="form-control" />
                            <label for="Email" class="form-label">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-3 form-floating">
                            <input asp-for="Senha" type="password" class="form-control" />
                            <label for="Senha" class="form-label">Senha</label>
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="pt-1 mb-3 text-danger">@ViewBag.Message</div>

                        <div class="pt-1 mb-5">
                            <button type="submit" class="btn btn-info btn-lg btn-block" style="background-color: #a8966f; color: white; border: none;">Login</button>
                        </div>

                        <p class="small mb-3 pb-lg-1"><a class="text-muted" href="@Url.Action("Login", "UsuarioClientes")">Login Cliente</a></p>
                        <p class="small mb-3 pb-lg-1"><a class="text-muted" href="@Url.Action("Create", "UsuarioDentistas")">Esqueceu sua senha?</a></p>
                        <p class="small mb-3 pb-lg-1"><a class="text-muted" href="@Url.Action("Create", "UsuarioDentistas")">Registre Agora</a></p>
                    </form>
                </div>
            </div>
            <div class="col-sm-7 px-0 d-none d-sm-block">
                <img src="https://img.freepik.com/fotos-gratis/foto-vertical-de-uma-jovem-dentista-em-seu-consultorio-oferecendo-diferentes-tipos-de-servicos-odontologicos_181624-58686.jpg?w=740&t=st=1698751911~exp=1698752511~hmac=23f306c1c4ef1fc47c2be0ef89322627acad3a048edac9ac6501dd607617cf83"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>